<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.app.exercise.activity.ResultActivity"
    android:background="#F0F8FF">

    <include layout="@layout/exercise_layout_top2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/picture_frame"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/exercise_result_tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/exercise_result_tv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:text="得    分："
            android:textColor="#FF4040"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exercise_result_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:text="答题时间："
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exercise_result_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:text="提交时间："
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/exercise_result_bt_record"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="返回首页"
        android:textColor="@color/white"
        android:background="@drawable/ic_click_bt"/>
</LinearLayout>

