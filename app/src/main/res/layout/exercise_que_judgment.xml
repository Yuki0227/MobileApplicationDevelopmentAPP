<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exercise_judgement_tv_que"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/exercise_judgement_cb_choice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/exercise_cb"
            android:padding="8dp"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/exercise_judgement_cb_choice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/exercise_cb"
            android:padding="8dp"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/exercise_judgement_tv_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/exercise_judgement_tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/exercise_judgement_tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/gray" />
    </LinearLayout>
</ScrollView>